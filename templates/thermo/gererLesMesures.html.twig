{% extends 'base.html.twig' %}

{% block body %}

    <div class="text-center">
        <h1>Les mesures</h1>
        <a href="{{ path('creer_mesure') }}" class="btn btn-sm btn-primary">Ajouter</a>

    </div>

    <br>
    <div class="container">
        <div class="row">
            <div class="offset-2 col-lg-8" id="mesures">
                <!--affichage en liste des dates en bdd-->

                    <table class="table table-hover" >
                        <thead>
                        <tr class="table-success"  >
                            <th scope="col">nom de la salle</th>
                            <th scope="col">date</th>
                            <th scope="col">temperature</th>
                            <th scope="col">hygrométrie</th>
                            <th scope="col">suppression</th>
                        </tr>
                        </thead>
                        {% for mesure in mesures %}
                            {% if mesure.salle.user.id == app.user.id %}
                            <tr onclick="location.href='{{ path('modif_Mesure',{'id': mesure.id}) }}', target='_blank';;" onMouseOver="this.style.cursor='pointer'; this.bgColor = '009999'; " onMouseOut ="this.bgColor = 'FFFFFF'">
                                <td>{{ mesure.salle.nom }}</td>
                                <td>{{ mesure.date|date('d/m/Y') }}</td>
                                <td>{{ mesure.temperature }}°C</td>
                                <td>{{ mesure.hygrometrie }}%</td>
                                <td> <a href="{{ path('mesure_delete',{'id': mesure.id}) }}" >Supprimer</a></td>
                            </tr>
                            {% endif %}
                        {% endfor %}
                    </table>
                    <br>
                    <div class="text-center">
            </div>
        </div>
    </div>


{% endblock %}