{% extends 'base.html.twig' %}

{% block body %}

    <div class="text-center">
        <h1>Les mesures</h1>
        <a href="{{ path('creer_mesure') }}" class="btn btn-sm btn-primary">Ajouter</a>

    </div>

    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
               <!-- <h4>Rechercher:</h4>-->
            </div>
            <div class="col-lg-6" id="mesures">
                <!--affichage en liste des dates en bdd-->
                <ul class="list-group">
                   {% for mesure in mesures %}
                       {% if mesure.salle.user.id == app.user.id %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ path('modif_Mesure',{'id': mesure.id}) }}" >
                           {{ mesure.salle.nom}} {{ mesure.date|date('d/m/Y') }}
                        </a>
                        <span>
                            {{ mesure.temperature }}Â°C
                        </span>
                        <span>
                            {{ mesure.hygrometrie }}%
                        </span>
                        <a href="{{ path('mesure_delete',{'id': mesure.id}) }}" >Supprimer</a>
                    </li>
                        {% endif %}
                    {% endfor %}
                </ul>

            </div>
        </div>
    </div>


{% endblock %}