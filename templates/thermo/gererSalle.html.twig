{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        <h1>Mes salles</h1>
        <a href="{{ path('creerSalle') }}" class="btn btn-sm btn-primary">Ajouter</a>
    </div>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                {# <h4>Rechercher:</h4>#}
            </div>
            <div class="col-lg-6" id="salles">
                {% for salle in salles %}
                    {% if salle.user.id == app.user.id %}
                        <ul class="list-group" >
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a href="{{ path('modif',{'id': salle.id}) }}">  {{ salle.nom }}</a>
                                {# <a href="{{ path('salleDelete',{'id': salle.id}) }}">Supprimer</a>#}
                            </li>
                        </ul>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}