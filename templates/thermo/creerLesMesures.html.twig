{% if mesuresid is defined %}
    {% set title = 'Modifier les mesures' %}
    {% set btnvalue = 'Mettre Ã  jour' %}
    {% set btnsup = 'Supprimer' %}
{% else%}
    {% set title ='Ajouter des mesures' %}
    {% set btnvalue = 'Enregistrer' %}
    {% set btnsup = false %}
{% endif %}

{% extends 'base.html.twig' %}


{% block body %}

    <div class="jumbotron">
        <div class="text-center">
            <h2 >{{ title }}</h2>
            <hr class="my-4">
            <ul>
                {{ form_start(formMesure) }}
                <li>Date : {{ form_widget(formMesure.date) }}</li>
                <br>
                <li>Temperature : {{ form_widget(formMesure.temperature) }}</li>
                <br>
                <li>Hygrometrie :  {{ form_widget(formMesure.hygrometrie) }}</li>
                <br>
                <li>Nom de la salle :  {{ form_widget(formMesure.salle) }}</li>
                <br>

                <button type="submit" class="btn btn-sm btn-primary" name="ajouter">{{ btnvalue }}</button>
                {#  <button type="submit" class="btn btn-sm btn-primary" name="supprimer">{{ btnsup }}</button>}#}
                <a href="{{ path('vueEnsemble') }}" class="btn btn-sm btn-primary" name="annuler">Annuler</a>
                {{ form_end(formMesure)}}
                <br>
            </ul>
        </div>
    </div>

{% endblock %}